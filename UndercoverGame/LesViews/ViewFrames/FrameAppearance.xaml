<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndercoverGame.LesViews.ViewFrames.FrameAppearance">
    <Frame CornerRadius="10" Grid.Column="0" Grid.Row="1" Style="{StaticResource SquareSettings}" >
        <VerticalStackLayout Spacing="20">
            <Label 
        Text="Appearance" 
        HorizontalOptions="Center" 
        VerticalOptions="Center" 
        FontSize="Medium"/>

            <Picker MaximumHeightRequest="100"
                    SelectedIndexChanged="colorChanged"
                    SelectedItem="">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Light</x:String>
                        <x:String>Dark</x:String>
                        

                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </VerticalStackLayout>
    </Frame>
</ContentView>
