<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndercoverGame.LesViews.ViewFrames.FrameMusic">

    <Frame CornerRadius="10" Grid.Column="0" Grid.Row="1" Style="{StaticResource SquareSettings}" >
        <VerticalStackLayout Spacing="20">
            <Label 
        Text="Music" 
        HorizontalOptions="Center" 
        VerticalOptions="Center" 
        FontSize="Medium"/>

            <Slider ThumbColor="{StaticResource ToxicGreen}" MinimumTrackColor="{StaticResource DarkerPink}"/>
        </VerticalStackLayout>
    </Frame>

</ContentView>
